def calculate_total_time():
  """
  Вычисляет общее время движения лодки между двумя пунктами туда и обратно,
  с учетом скорости течения реки.
  """

  while True:
    try:
      V = float(input("Введите скорость лодки в стоячей воде (км/ч): "))
      if V <= 0:
          print("Скорость лодки должна быть положительной.")
          continue  # Возвращаемся к началу цикла
      U = float(input("Введите скорость течения реки (км/ч): "))
      if U < 0:
          print("Скорость течения не может быть отрицательной.")
          continue # Возвращаемся к началу цикла
      if U >= V:
          print("Скорость течения не может быть больше или равна скорости лодки!")
          continue
      S = float(input("Введите расстояние между пунктами А и Б (км): "))
      if S <= 0:
          print("Расстояние должно быть положительным.")
          continue  # Возвращаемся к началу цикла
      break # Если все введено верно, выходим из цикла
    except ValueError:
      print("Ошибка ввода! Пожалуйста, введите числа.")

  # Вычисляем время движения по течению
  t1 = S / (V + U)

  # Вычисляем время движения против течения
  t2 = S / (V - U)

  # Вычисляем общее время
  T = t1 + t2

  print(f"Общее время движения лодки: {T:.2f} часов")


# Вызываем функцию для расчета времени
calculate_total_time()
